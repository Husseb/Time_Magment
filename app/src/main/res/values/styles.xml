<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryDark">@color/colorBlue</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

    <style name="AppThemeBottom" parent="Widget.Design.BottomNavigationView">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/colorWhite</item>
        <item name="android:itemBackground">@color/colorGray</item>
    </style>

    <style name="AppTheamFloating" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:itemBackground">@color/colorBlue</item>
    </style>

 </resources>
