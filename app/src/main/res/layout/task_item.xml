<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="7dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#88b184bd"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameProjectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/linear"
            android:text="Training"
            android:textColor="#ff0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/selectGrayIv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/select_gray"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/selectBlueIv"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/yalow"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:id="@+id/describtionProjectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameProjectTv"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:layout_toEndOf="@+id/linear"
            android:maxLength="100"
            android:text="This project is for the most of it "
            android:textColor="#ff0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="18/8/2018"
            android:textColor="#ffdd00"
            android:textSize="13sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>